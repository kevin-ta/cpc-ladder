{% extends 'base.html.twig' %}

{% block body %}
	<div class="col-md-12">
		<div class="text-center">
			<h2>{{ videogame.name }}</h2></br>
		</div>
		<table class="table">
			<thead>
				<tr>
					<th>
						#
					</th>
					{% if videogame.isSolo == '0' %}
						<th>
							Nom de l'Ã©quipe
						</th>
						<th>
							Liste des joueurs
						</th>
					{% else %}
						<th>
							Joueur
						</th>
					{% endif %}
					<th>
						Elo
					</th>
				</tr>
			</thead>
			<tbody>
				{% set rank = '1' %}
				{% for i in ranking %}
					<tr>
						<th>{{ rank }}</th>
						<td>{{ i.name }}</td>
						{% if videogame.isSolo == '0' %}
							<td>
								{% for player in i.players %}
									{{ player.nickname }}
									{% if not loop.last %}
										,
									{% endif %}
								{% endfor %}
							</td>
						{% endif %}
						<td>{{ i.currentScore }}</td>
					{% set rank = rank + 1 %}
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}