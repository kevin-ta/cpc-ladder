{% trans_default_domain 'FOSUserBundle' %}

<div class="fos_user_user_show">
    <div class="col-md-12">
		<h3>Mon profil</h3><br><br>
		<div class="col-md-6">
			<h4>Nom complet : {{ user.firstname }} &nbsp;<i>"{{ user.username }}"</i> &nbsp;&nbsp;{{ user.lastname }}</h4>
			<h4>Adresse mail : {{ user.email }}</h4>
		</div>
		<div class="col-md-6">
			{% for player in players %}
				<h4>{{ player.videogame.name }} : <a href="{{ path('cpc_team_homepage', {id:player.videogame.id}) }}">{{ player.nickname }}</a></h4>
			{% endfor %}
		</div>
	</div>
</div>